doctype
html
  head
    title= title
    link(rel="stylesheet", href="main.css")
  body
    div(id="message")
      form(method='post' class="form" action='/reply')
        h2 RSVP 
        p(type="Name:")
            input(type='text' id='name' name='name')
       
        p(type='Email:') 
            input(type='email' id='email' name='email')
        
        p(type="Attending:") 
            input(type='radio' id='attending1' name='attending' value=1 checked)
            label(for='attending1') I'll be there
            input(type='radio' id='attending2' name='attending' value=0)
            label(for='attending2') I can't make it
        
        select(name='numOfGuests' id="numOfGuests")
                option(value=1) 1
                option(value=2) 2
                option(value=3) 3
                option(value=4) 4
                option(value=5) 5
                option(value=6) 6
                option(value=7) 7
                option(value=8) 8
        br
        button(id='rsvpBtn' onclick='submitRSVP()') RSVP
    script(src='main.js')

